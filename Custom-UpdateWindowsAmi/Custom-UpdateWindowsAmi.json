			"inputs": {
				"DocumentName": "AWS-RunPowerShellScript",
				"InstanceIds": [
					"{{ DescribeManagedInstanceForInstanceId.InstanceId }}"
				],
				"Parameters": {
					"commands": "{{ PreUpdateScript }}"
				}
			}
		},
		{
			"name": "StopInstanceforPreUpdateScript",
			"action": "aws:changeInstanceState",
			"maxAttempts": 3,
			"timeoutSeconds": 3600,
			"onFailure": "Abort",
			"inputs": {
				"InstanceIds": [
					"{{ DescribeManagedInstanceForInstanceId.InstanceId }}"
				],
				"DesiredState": "stopped"
			}
		},
		{
			"name": "StartInstanceforPreUpdateScript",
			"action": "aws:changeInstanceState",
			"maxAttempts": 3,
			"timeoutSeconds": 3600,
			"onFailure": "Abort",
			"inputs": {
				"InstanceIds": [
					"{{ DescribeManagedInstanceForInstanceId.InstanceId }}"
				],
				"DesiredState": "running"
			}
		},
		{
			"name": "WaitTimeforPreUpdateScript",
			"action": "aws:sleep",
			"maxAttempts": 3,
			"onFailure": "Abort",
			"timeoutSeconds": 1200,
			"inputs": {
				"Duration": "PT5M"
			}
		},
		{
			"name": "WaitUntilSsmAgentIsOnline2",
			"action": "aws:assertAwsResourceProperty",
			"timeoutSeconds": 1800,
			"maxAttempts": 3,
			"onFailure": "Abort",
			"inputs": {
				"Service": "ssm",
				"Api": "DescribeInstanceInformation",
				"InstanceInformationFilterList": [
					{
						"key": "InstanceIds",
						"valueSet": [
							"{{ DescribeManagedInstanceForInstanceId.InstanceId }}"
						]
					}
				],
				"PropertySelector": "$.InstanceInformationList[0].PingStatus",
				"DesiredValues": [
					"Online"
				]
			}
		},
		{
			"name": "RunPostUpdateScript",
			"action": "aws:runCommand",
			"maxAttempts": 3,
			"onFailure": "Abort",
			"timeoutSeconds": 1800,
			"inputs": {
				"DocumentName": "AWS-RunPowerShellScript",
				"InstanceIds": [
					"{{ DescribeManagedInstanceForInstanceId.InstanceId }}"
				],
				"Parameters": {
					"commands": "{{ PostUpdateScript }}"
				}
			}
		},
		{
			"name": "RunSysprepGeneralize",
			"action": "aws:runCommand",
			"maxAttempts": 3,
			"onFailure": "Abort",
			"timeoutSeconds": 1800,
			"inputs": {
				"DocumentName": "AWSEC2-RunSysprep",
				"InstanceIds": [
					"{{ DescribeManagedInstanceForInstanceId.InstanceId }}"
				],
				"Parameters": {
					"Id": "{{automation:EXECUTION_ID}}"
				}
			}
		},
		{
			"name": "StopInstanceforCreateImage",
			"action": "aws:changeInstanceState",
			"maxAttempts": 3,
			"timeoutSeconds": 7200,
			"onFailure": "Abort",
			"inputs": {
				"InstanceIds": [
					"{{ DescribeManagedInstanceForInstanceId.InstanceId }}"
				],
				"CheckStateOnly": false,
				"DesiredState": "stopped"
			}
		},
		{
			"name": "CreateImage",
			"action": "aws:createImage",
			"maxAttempts": 3,
			"onFailure": "Abort",
			"inputs": {
				"InstanceId": "{{ DescribeManagedInstanceForInstanceId.InstanceId }}",
				"ImageName": "{{ TargetAmiName }}",
				"NoReboot": true,
				"ImageDescription": "AMI Generated by EC2 Automation on {{global:DATE_TIME}} from {{SourceAmiId}}"
			}
		},
		{
			"name": "TerminateInstance",
			"action": "aws:changeInstanceState",
			"maxAttempts": 3,
			"onFailure": "Abort",
			"inputs": {
				"InstanceIds": [
					"{{ DescribeManagedInstanceForInstanceId.InstanceId }}"
				],
				"DesiredState": "terminated"
			}
		}
	],
	"outputs": [
		"CreateImage.ImageId"
	]
}
